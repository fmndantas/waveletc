#ifndef WAVELET_H
#define WAVELET_H

class Wavelet {
 private:
  int m, g, mg;
  vector<vector<int>> mcw;

 public:
  Wavelet(int m, int g);

  int get_m();

  int get_g();

  int get_mg();

  void set_mcw(const vector<vector<int>>& mcw);

  vector<vector<int>> get_mcw();

  vector<int> encode(const vector<int>& to_encode);

  vector<int> decode(const int n, const vector<int>& enc);
};

#endif
